- content_for :container_class, "wide-body"

%h2 WELCOME TO ADMIN LAND
%p You must be getting married.

%h3 Totals
%ul.list-unstyled
  %li Invited guests: #{@guests.count}
  %li Total invitations: #{@invitations.count}
  %li <b>Invitation RSVPs</b>
  %ul
    %li Rehearsal Dinner: #{@rsvps.yeses.rehearsal_dinner.count} yes / #{@rsvps.nos.rehearsal_dinner.count} no (out of #{@rsvps.rehearsal_dinner.count} invitations)
    %li Zoo Walk: #{@rsvps.yeses.zoo_walk.count} yes / #{@rsvps.nos.zoo_walk.count} no (out of #{@rsvps.zoo_walk.count} invitation)
    %li Wedding: #{@rsvps.yeses.wedding.count} yes / #{@rsvps.nos.wedding.count} no (out of #{@rsvps.wedding.count} invitations)
    %li Sunday brunch: #{@rsvps.yeses.brunch.count} yes / #{@rsvps.nos.brunch.count} no (out of #{@rsvps.brunch.count} invitations)

= render "rsvps_table"

= button_to "Send invitations", send_invitations_path, class: "btn btn-primary", data: { confirm: "Really?" }
